<style is:global>
  footer {
    background-color: #f0efee;
    padding: 50px 0;
  }
  footer p {
    font-size: 14px;
    line-height: 20px;
    color: #313b54;
    text-align: center;
    padding: 0 50px;
  }
  footer p:nth-child(2) {
    margin: 20px 0 0 0;
  }
  footer p:nth-child(3) {
    margin: 30px 0 0 0;
  }

  @media only screen and (max-width: 767px) {
    footer {
      padding: 35px 0;
    }
    p {
      padding: 0 0;
    }
  }
</style>
